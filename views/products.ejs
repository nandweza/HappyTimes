<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>

        <div class="products">
            <div class="products-main">
                <div class="product">
                    <h2>Our Products</h2>
                    <div class="soap-card">
                        <h3>Happy Wash Liquid Soap.</h3>
                        <% products.forEach((product) => { %>
                            <div class="soap-grid">
                                <div class="soap">
                                    <div class="soap-image">
                                        <img src="<%= product.blogimg %>" alt="1 litre Liquid Soap" />
                                    </div>
                                    <p>
                                        <%= product.desc %>
                                    </p>
                                </div>
                            </div>
                        <% }) %>
                        </div>
                    </div>
                </div>
                <div class="services">
                    <h2>Our Services</h2>
                    <div class="service-grid">
                        <% services.forEach((service) => { %>
                            <div class="service">
                                <h3>
                                    <%= service.title %> 
                                </h3>
                                <p>
                                    <%= service.desc %>
                                </p>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>

        <%- include('./partials/footer.ejs') %>
    </body>
</html>