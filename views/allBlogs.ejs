<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head.ejs') %>

    <body>

        <%- include('./partials/nav.ejs') %>
        <h3>All Articles</h3>
        <div class="allBlogs">
            <% blogs.reverse() %>
            
            <% blogs.forEach(blog => { %>
                <div class="card">
                    <dvi class="card-body">
                        <h3 class="card-title"><%= blog.title %></h3>
                        <p><%= blog.img </p> %>
                        <p><%= blog.content</p> %>
                    </dvi>
                </div>
            <%})%>
        </div>

        <%- include('./partials/footer.ejs') %>
    </body>
</html>