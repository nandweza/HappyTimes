<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>

        <div class="blog content">
            <div class="main">
                <div class="headtext">
                    <h2>Happy Times Blog</h2>
                    <p>Elevating your happiness regularly...</p>
                </div>
                <div class="blog-btn">
                    <a href="/posts"><input type="button" value="All Articles" class="btns"></a>
                </div>
                <div class="box featured-blogs">
                    <% posts.forEach((post) => { %>
                    <div class="single-blog fblog">
                        <div class="title">
                            <%= post.blogtitle %>
                        </div>
                        <span>
                            <%= post.createdAt.toLocaleDateString(); %>
                        </span>
                        <div class="img">
                            <%= post.img %>
                        </div>
                        <div class="desc">
                            <p>
                                <%= post.blogcontent.substring(0, 100) + "..." %>
                                <a href="/posts/<%= post.blogtitle %>">Read more.</a>"
                            </p>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <%- include('./partials/footer.ejs') %>
    </body>
</html>