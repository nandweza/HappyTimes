<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>
        <div id="intro-carousel" class="carousel slide d-flex justify-content-center align-items-center" data-bs-ride="carousel" style="height: 85vh;">
            <div class="carousel-inner pt-5">
              <div class="carousel-item active">
                <div class="text-center">
                  <h2 class="fs-*">Our Products & Services</h2>
                </div>
              </div>
              <div class="carousel-item">
                <div class="text-center">
                  <em class="carousel-em fs-*">
                    We offer a wide range of Quality, Sustainable & Scalable Products
                  </em>
                </div>
              </div>
            </div>
            <button class="carousel-control-prev pt-5" type="button" data-bs-target="#intro-carousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next pt-5" type="button" data-bs-target="#intro-carousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
        <div class="products">
            <div class="products-main">
                <div class="product">
                    <h2>Our Products</h2>
                    <div class="abt-rule"></div>
                    <div class="soap-card">
                        <!--<h3>Happy Wash Liquid Soap.</h3>-->
                        <div class="soap-grid">
                            <% if (products.length > 0) { %>
                                <% products.forEach((product) => { %>
                                    <div class="soap">
                                        <div class="soap-image">
                                            <img src="<%= product.blogimg %>" alt="litre Liquid Soap" />
                                        </div>
                                        <div class="desc">
                                            <h4>
                                                <%= product.title %>
                                            </h4>
                                            <p>
                                                <%= product.desc %>
                                            </p>
                                        </div>
                                    </div>
                                    <% }) %>
                            <% } else { %>
                                <h3>There are no products to display...</h3>
                            <% } %>
                        </div>
                    </div>
                </div>
                <div class="services">
                    <h2>Our Services</h2>
                    <div class="abt-rule"></div>
                    <div class="service-grid">
                        <% services.forEach((service) => { %>
                            <div class="service">
                                <h3>
                                    <%= service.title %> 
                                </h3>
                                <p>
                                    <%= service.desc %>
                                </p>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>

        <%- include('./partials/footer.ejs') %>
    </body>
</html>